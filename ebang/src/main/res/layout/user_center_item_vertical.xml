<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_member_manage"
        style="@style/user_center_item_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/member_manage"
        android:drawableRight="@drawable/right_arrow"
        android:text="信息管理"
        />

    <TextView
        android:id="@+id/tv_my_steps"
        style="@style/user_center_item_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/my_steps"
        android:drawableRight="@drawable/right_arrow"
        android:text="我的足迹"
        />

    <TextView
        android:id="@+id/tv_my_favorites"
        style="@style/user_center_item_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/my_favorites"
        android:drawableRight="@drawable/right_arrow"
        android:text="我的收藏"
        />


</LinearLayout>

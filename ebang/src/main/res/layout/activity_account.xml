<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ms.ebangw.activity.AccountActivity">

    <include
        layout="@layout/layout_common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_title"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:id="@+id/rl_date_select"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_year"
                style="@style/account_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年"
                />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06"
                android:textColor="@android:color/white"
                android:layout_below="@+id/tv_year"
                android:textSize="44sp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/tv_month"
                android:layout_alignBottom="@id/tv_month"
                >

                <com.ms.ebangw.view.NoPaddingTextView
                    style="@style/account_tab_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="月"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/triangle"
                    />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/dash_ver"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                style="@style/account_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出（元）"
                />

            <TextView
                android:id="@+id/tv_expend"
                style="@style/account_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                style="@style/account_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入（元）"
                />

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                />
        </LinearLayout>

    </LinearLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >


    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>

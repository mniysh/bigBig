<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ms.ebangw.activity.PeasantAuthenBackActivity">

    <include layout="@layout/layout_common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#F6F4F5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"

                android:background="@drawable/rotundity"
                />
            <View style="@style/bbb_hor"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="2"
                android:gravity="center"
                android:background="@drawable/rotundity"
                android:textColor="#000"

                android:textSize="20dp"
                />
            <View style="@style/bbb_hor"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/rotundity_one"
                android:textColor="#fff"

                android:textSize="20dp"
                />



        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="基本信息"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="实名认证"
                android:layout_marginLeft="35dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="银行卡绑定"
                android:layout_marginLeft="30dp"
                android:textColor="@color/back"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户人姓名:"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren"
                />
        </RelativeLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入真实姓名"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:maxLength="12"


            />
    </LinearLayout>
    <View
        style="@style/aaa_hor"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行所在省份:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren01"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"

            >
            <Spinner
                android:id="@+id/frag_pea_sp_sheng"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:entries="@array/sheng"
                android:background="@drawable/spin_jiguan"
                />
            <Spinner
                android:id="@+id/frag_pea_sp_shi"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:entries="@array/sheng"
                android:background="@drawable/spin_jiguan"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/aaa_hor"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户行名称:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren02"
                />
        </RelativeLayout>
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="银行"
            android:textSize="15dp"
            android:background="#fff"
            android:maxLength="60"

            />
    </LinearLayout>
    <View
        style="@style/aaa_hor"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号:"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren04"
                />
        </RelativeLayout>
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入真实姓名"
            android:textSize="12sp"
            android:maxLength="22"
            android:singleLine="true"
            android:background="#fff"

            />
    </LinearLayout>
    <View
        style="@style/aaa_hor"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="该银行卡户名必须与会员真实姓名一致，否则会提交失败！"

        android:textSize="10dp"
        android:textColor="@color/auther_red"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"


        />
    <Button
        android:id="@+id/bt_next"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="@drawable/bk_but"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"

        />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >


    <include layout="@layout/layout_common_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#F6F4F5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"

                android:background="@drawable/rotundity_one"
                />
            <View style="@style/bbb_hor"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="2"
                android:gravity="center"
                android:background="@drawable/rotundity"
                android:textColor="#000"

                android:textSize="20dp"
                />
            <View style="@style/bbb_hor"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/rotundity"
                android:textColor="#000"

                android:textSize="20dp"
                />



        </LinearLayout>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="基本信息"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="实名认证"
                android:layout_marginLeft="35dp"
                android:textColor="@color/back"
                android:layout_height="wrap_content" /><TextView
            android:layout_width="wrap_content"
            android:text="银行卡绑定"
            android:layout_marginLeft="30dp"
            android:textColor="@color/back"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/emailregi"
        android:visibility="gone"

        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/kaihuren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="真实姓名:"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/auther_red"
                    android:layout_toLeftOf="@id/kaihuren"
                    />
            </RelativeLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="请输入真实姓名"
                android:textSize="15dp"
                android:background="#fff"
                android:maxLength="12"
                android:layout_marginLeft="5dp"


                />
        </LinearLayout>
        <View
            style="@style/aaa_hor"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/kaihuren06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/auther_red"
                    android:layout_toLeftOf="@id/kaihuren06"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <RadioGroup
                    android:id="@+id/act_self_rg_sex"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    >
                    <RadioButton
                        android:id="@+id/act_self_rb_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_selec"
                        android:text="男"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:checked="true"
                        />
                    <RadioButton
                        android:id="@+id/act_self_rb_women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_selec"
                        android:text="女"
                        android:padding="5dp"
                        />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <View style="@style/aaa_hor"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/kaihuren01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号:"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/auther_red"
                    android:layout_toLeftOf="@id/kaihuren01"
                    />
            </RelativeLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="请输入身份证"
                android:textSize="15dp"
                android:background="#fff"
                android:maxLength="18"
                android:layout_marginLeft="5dp"


                />
        </LinearLayout>
        <View
            style="@style/aaa_hor"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/kaihuren02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号:"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/auther_red"
                    android:layout_toLeftOf="@id/kaihuren02"
                    />
            </RelativeLayout>
            <EditText
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:textSize="15dp"
                android:background="#fff"
                android:maxLength="11"
                android:layout_marginLeft="5dp"


                />
        </LinearLayout>
        <View
            style="@style/aaa_hor"
            />



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/kaihuren07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="籍贯:"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/auther_red"
                    android:layout_toLeftOf="@id/kaihuren07"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                >
                <Spinner
                    android:id="@+id/frag_pea_sp_sheng"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/sheng"
                    android:background="@drawable/spin_jiguan"
                    />
                <Spinner
                    android:id="@+id/frag_pea_sp_shi"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/sheng"
                    android:background="@drawable/spin_jiguan"
                    />
                <Spinner
                    android:id="@+id/frag_pea_sp_qu"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/sheng"
                    android:background="@drawable/spin_jiguan"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/aaa_hor"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/kaihuren05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加工种:"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/auther_red"
                    android:layout_toLeftOf="@id/kaihuren05"
                    />
            </RelativeLayout>
            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="请选择"-->
                <!--android:layout_weight="2"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:textColor="#fff"-->
                <!--android:background="@drawable/butrotundity"-->
                <!--/>-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:background="@drawable/sel_shape"
                />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/aaa_hor"
            />
        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/bt_next"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:background="@drawable/bk_but"
            android:text="下一步"
            />

    </LinearLayout>

</LinearLayout>
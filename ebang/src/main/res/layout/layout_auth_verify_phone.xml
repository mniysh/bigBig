<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/ll_verify_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@drawable/divider_line_gray"
              android:orientation="vertical"
              android:showDividers="middle"
              android:visibility="visible"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/authen_item_height"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/authorization_text"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="*手机号:"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/et_verify_phone"
            style="@style/authorization_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:maxLength="11"

            />

        <Button
            android:id="@+id/btn_smsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/verify_msm_yellow_selector"
            android:gravity="center"
            android:text="验证"
            android:textColor="@android:color/white"
            android:textSize="@dimen/authen_item_text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/authen_item_height"
        android:orientation="horizontal"

        >

        <TextView
            style="@style/authorization_text"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="*输入验证码:"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/et_verify_code"
            style="@style/authorization_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:hint="请输入验证码"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/verify_msm_blue_selector"
        android:gravity="center"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="@dimen/authen_item_text"
        />


</LinearLayout>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ms.ebangw.fragment.InvestorCenterFragment">

    <FrameLayout
        android:id="@+id/fl_head_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <include
                android:id="@+id/ll_item_horizontal"
                layout="@layout/user_center_item_horizontal"
                />

            <include
                android:id="@+id/ll_item_vertical"
                layout="@layout/user_center_item_vertical"/>

            <include
                android:id="@+id/ll_eweima"
                layout="@layout/layout_invite_worker_qr_code"
                android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>

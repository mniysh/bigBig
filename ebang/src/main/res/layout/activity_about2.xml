<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:divider="@drawable/divider_line_gray"
        android:orientation="vertical"
        android:showDividers="middle"
        tools:context="com.ms.ebangw.activity.AboutActivity">

        <include layout="@layout/layout_common_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo_144"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/gray"
                android:textSize="12sp"
                />

            <ImageView
                android:id="@+id/iv_eweima"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/eweima"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="@string/about_eweima"
                android:textColor="@color/gray"
                android:textSize="12sp"
                />

        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:singleLine="true"
            android:text="检查更新"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_serve_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:singleLine="true"
                android:text="客服电话：400-9660699"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/btn_dial"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/guide_round_btn_selector"
                android:singleLine="true"
                android:text="拨打"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/about_ebang"
            android:textSize="16sp"
            />
    </LinearLayout>
</ScrollView>
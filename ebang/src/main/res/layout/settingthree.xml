<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:id="@+id/lin_edit03"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="密码修改"
            android:textColor="@color/black"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            />
        <TextView
            android:clickable="true"

            android:id="@+id/tv_threeFinish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="@color/auther_red"
            />


    </LinearLayout>
        <View style="@style/aaa_hor"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="15dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧密码:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/et_oldPass"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textSize="15dp"
            android:background="#fff"
            android:maxLength="12"
            android:layout_marginLeft="5dp"


            />
    </LinearLayout>
        <View style="@style/aaa_hor"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="15dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新密码:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren2"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/et_newPass"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textSize="15dp"
            android:background="#fff"
            android:maxLength="12"
            android:layout_marginLeft="5dp"


            />
    </LinearLayout>
        <View style="@style/aaa_hor"/>
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="15dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/kaihuren3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/auther_red"
                android:layout_toLeftOf="@id/kaihuren3"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/et_againPass"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="请再输入密码"
            android:textSize="15dp"
            android:background="#fff"
            android:maxLength="12"
            android:layout_marginLeft="5dp"


            />
    </LinearLayout>
    </LinearLayout>


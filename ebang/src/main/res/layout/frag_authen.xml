<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_info_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_no_auth"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="选择身份"
                    android:textColor="@color/gray_text"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/btn_headman"
                style="@style/auth_style"
                android:drawableLeft="@drawable/headman_auth"
                android:text="工长认证" />

            <TextView
                android:id="@+id/btn_worker"
                style="@style/auth_style"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/worker_auth"
                android:text="务工认证" />

            <TextView
                android:id="@+id/btn_investor"
                style="@style/auth_style"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/investor_auth"
                android:text="业主认证" />

            <TextView
                android:id="@+id/btn_developers"
                style="@style/auth_style"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/developers_auth"
                android:text="开发商认证" />

            <TextView
                android:id="@+id/btn_labour_company"
                style="@style/auth_style"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/labour_company_auth"
                android:text="劳务公司认证" />


        </LinearLayout>
    </ScrollView>


    <include
        android:id="@+id/ll_authed"
        layout="@layout/layout_personal_info"
        android:visibility="gone" />

    <include
        android:id="@+id/ll_eweima"
        layout="@layout/layout_invite_worker_qr_code"
        android:visibility="visible" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/act_login_rel01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#0075AA"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/act_register2_iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/jiantou"
            android:layout_marginLeft="10dp"
             />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/act_login_lin02"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_login_rel01"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >
        <EditText 
            android:id="@+id/act_register_2_et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="设置密码"
            android:background="#fff"
            android:inputType="textPassword"
            android:padding="15dp"
            android:drawablePadding="10dp"
            
            />
        <EditText 
            
            android:id="@+id/act_register_2_et_password2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:background="#fff"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            
            />
        <Button 
            android:id="@+id/act_register_2_but_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bk_but"
            android:text="完成"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            />

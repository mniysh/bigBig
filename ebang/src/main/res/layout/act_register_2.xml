        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo01"
            android:layout_marginTop="15dp"
            />
            -->
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/act_login_lin03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        >
        <ImageView 
            android:id="@+id/act_register2_iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qq"
            />
        <ImageView 
            android:id="@+id/act_register2_iv_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weibo"
            android:layout_marginLeft="10dp"
            />
        <ImageView 
            android:id="@+id/act_register2_iv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weixin"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/act_login_lin03"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        >
        <View 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#6C6C6C"
            
            android:layout_gravity="center_vertical"
            />
        <TextView 
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用第三方账号登录"
            android:layout_gravity="center"
            />
        <View 
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#6C6C6C"
            />
    </LinearLayout>

</RelativeLayout>

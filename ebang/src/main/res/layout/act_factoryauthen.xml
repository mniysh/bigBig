<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#F6F4F5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rotundity_one"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"

                        android:textSize="20dp" />

                    <View
                        style="@style/bbb_hor"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rotundity"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#000"

                        android:textSize="20dp" />

                    <View
                        style="@style/bbb_hor"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rotundity"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#000"

                        android:textSize="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="基本信息"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="实名认证"
                        android:textColor="@color/back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="企业完善"
                        android:textColor="@color/back" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kaihuren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="联系人:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/kaihuren"
                            android:text="*"
                            android:textColor="@color/auther_red" />
                    </RelativeLayout>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:hint="请输入真实姓名"
                        android:maxLength="12"
                        android:textSize="15dp"


                        />
                </LinearLayout>

                <View style="@style/aaa_hor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kaihuren01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="身份证号:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/kaihuren01"
                            android:text="*"
                            android:textColor="@color/auther_red" />
                    </RelativeLayout>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:hint="请输入身份证"
                        android:maxLength="18"
                        android:textSize="15dp"

                        />
                </LinearLayout>

                <View style="@style/aaa_hor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kaihuren02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="手机号:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/kaihuren02"
                            android:text="*"
                            android:textColor="@color/auther_red" />
                    </RelativeLayout>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:background="#fff"
                        android:hint="请输入手机号"
                        android:maxLength="11"
                        android:textSize="15dp"


                        />
                </LinearLayout>

                <View style="@style/aaa_hor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kaihuren06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="性别:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/kaihuren06"
                            android:text="*"
                            android:textColor="@color/auther_red" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal"

                        >

                        <RadioGroup
                            android:id="@+id/act_self_rg_sex"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/act_self_rb_man"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:button="@drawable/check_selec"
                                android:checked="true"
                                android:padding="5dp"
                                android:text="男" />

                            <RadioButton
                                android:id="@+id/act_self_rb_women"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/check_selec"
                                android:padding="5dp"
                                android:text="女" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/aaa_hor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kaihuren07"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="籍贯:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/kaihuren07"
                            android:text="*"
                            android:textColor="@color/auther_red" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2">

                        <Spinner
                            android:id="@+id/frag_pea_sp_sheng"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/spin_jiguan"
                            android:entries="@array/sheng" />

                        <Spinner
                            android:id="@+id/frag_pea_sp_shi"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/spin_jiguan"
                            android:entries="@array/sheng" />

                        <Spinner
                            android:id="@+id/frag_pea_sp_qu"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/spin_jiguan"
                            android:entries="@array/sheng" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/aaa_hor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业介绍:" />

                    <EditText
                        android:id="@+id/act_release_ed_content"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bk_biankuang"
                        android:gravity="top"
                        android:hint="请输入内容(100字以内)"
                        android:maxLength="200"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bk_but"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="15dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

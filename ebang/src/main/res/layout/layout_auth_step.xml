<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/auth_step_bg"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/rotundity_one"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <View
            style="@style/bbb_hor"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/rotundity"
            android:gravity="center"
            android:text="2"
            android:textColor="#000"
            android:textSize="20dp"
            />

        <View
            android:id="@+id/step_line"
            style="@style/bbb_hor"
              android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="3"
            android:gravity="center"
            android:background="@drawable/rotundity"
            android:textColor="#000"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_step_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_baseInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="基本信息"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_nameAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="实名认证"
            android:textColor="@color/back"/>

        <TextView
            android:id="@+id/tv_cardBind"
            android:layout_width="wrap_content"
            android:text="银行卡绑定"
            android:layout_marginLeft="30dp"
            android:textColor="@color/back"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>



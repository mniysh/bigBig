                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/item_xlistview_tv_dianzan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点赞"
                        />

                    <TextView
                        android:id="@+id/item_xlistview_tv_dianzan_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

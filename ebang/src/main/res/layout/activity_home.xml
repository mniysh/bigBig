<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:background="#F7F4F4"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/home_line"/>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="主页"
            android:button="@drawable/empty"
            android:drawableTop="@drawable/home_page_selector"
            android:textColor="@color/home_bottom_selector"
            android:padding="5dp"
            />

        <RadioButton
            android:id="@+id/rb_discovery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发现"
            android:gravity="center"
            android:button="@drawable/empty"
            android:drawableTop="@drawable/home_descovery_selector"
            android:textColor="@color/home_bottom_selector"
            android:padding="5dp"
            />
        <RadioButton
            android:id="@+id/rb_release"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发布"
            android:gravity="center"
            android:button="@drawable/empty"
            android:drawableTop="@drawable/home_descovery_selector"
            android:textColor="@color/home_bottom_selector"
            android:padding="5dp"
            />

        <RadioButton
            android:id="@+id/rb_service"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="邀友返现"
            android:gravity="center"
            android:button="@drawable/empty"
            android:drawableTop="@drawable/home_release_selector"
            android:textColor="@color/home_bottom_selector"
            android:padding="5dp"
            />



        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我的"
            android:button="@drawable/empty"
            android:drawableTop="@drawable/home_mine_selector"
            android:textColor="@color/home_bottom_selector"
            />
    </RadioGroup>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:tabMode="scrollable"
        app:tabGravity="center"
        style="@style/home_tab"
        android:visibility="gone"
        />

</LinearLayout>
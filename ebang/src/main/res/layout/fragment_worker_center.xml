<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".center.InvestorCenterFragment">
    <FrameLayout
        android:id="@+id/fl_head_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_invite_me"
                style="@style/user_center_item_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/published"
                android:text="@string/inviteMe"
                />

            <TextView
                android:id="@+id/tv_published"
                style="@style/user_center_item_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/published"
                android:text="@string/grab"
                />

            <TextView
                android:id="@+id/tv_trade"
                style="@style/user_center_item_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/trade"
                android:text="@string/trade"
                />

            <TextView
                android:id="@+id/tv_show"
                style="@style/user_center_item_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/evaluate"
                android:text="@string/evaluate"
                />

            <TextView
                android:id="@+id/tv_jifen"
                style="@style/user_center_item_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jifen"
                android:text="@string/jifen"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_line_gray"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <TextView
            style="@style/authorization_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer_alert"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/authen_item_height"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_k"
                    style="@style/authorization_developer_text"
                    android:layout_width="@dimen/bank_verify_width"
                    android:layout_height="wrap_content"
                    android:text="*企业名称："

                    />

                <EditText
                    android:id="@+id/et_company_name"
                    style="@style/authorization_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入企业名称"
                    />

            </LinearLayout>

            <TextView
                style="@style/authorization_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer_alert_1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_g"
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*营业执照注册号："
                />

            <EditText
                android:id="@+id/et_business_license_number"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:singleLine="false"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_a"
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*营业执照所在地："
                />

            <com.ms.ebangw.view.ProvinceAndCityView
                android:id="@+id/pac_permit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_b"
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*常住地址："
                />

            <EditText
                android:id="@+id/et_often_address"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写常住地址"
                android:singleLine="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/authen_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/tv_c"
                    style="@style/authorization_developer_text"
                    android:layout_width="@dimen/bank_verify_width"
                    android:layout_height="wrap_content"
                    android:text="*营业年限："
                    />

                <EditText
                    android:id="@+id/et_business_age"
                    style="@style/authorization_edit"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/border_gray"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="3"
                    />

                <TextView
                    style="@style/authorization_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年"
                    android:textColor="@android:color/black"
                    />

                <CheckBox
                    android:id="@+id/cb_isLong"
                    style="@style/authorization_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="长期"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <TextView
                style="@style/authorization_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer_long"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_d"
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*经营范围："
                />

            <EditText
                android:id="@+id/et_business_scope"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写经营范围"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_e"
                style="@style/authorization_developer_text"
                android:layout_height="wrap_content"
                android:text="*组织机构代码证号: "
                />

            <EditText
                android:id="@+id/et_company_number"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:singleLine="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_f"
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*公司座机："
                />

            <EditText
                android:id="@+id/et_stable_phone"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_h"
                style="@style/authorization_developer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="*组织机构代码证扫描件:"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_front"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/card_example"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/btn_photo_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#E25802"
                        android:text="拍照"
                        android:textColor="#fff"

                        />

                    <Button
                        android:id="@+id/btn_select_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/titleBar_bg"
                        android:padding="10dp"
                        android:text="上传照片"
                        android:textColor="#fff"
                        />


                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/authorization_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="false"
                android:text="\u3000\u3000\u3000证件要求："
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <TextView
                style="@style/authorization_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="false"
                android:text="@string/developer_permit_text"
                android:textColor="@color/auth_description"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_i"
                style="@style/authorization_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*企业联系人："
                />

            <EditText
                android:id="@+id/et_company_linkman"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv_j"
                style="@style/authorization_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="*企业联系人电话："
                />

            <EditText
                android:id="@+id/et_company_linkman_phone"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


        <TextView
            style="@style/authorization_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:gravity="left"
            android:padding="10dp"
            android:text="对公帐户"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="户名:"
                />

            <EditText
                android:id="@+id/et_public_account_name"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="对公帐户:"
                />

            <EditText
                android:id="@+id/et_public_account"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入对公帐户"
                android:inputType="number"
                android:maxLength="30"
                android:singleLine="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <TextView
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="再次输入对公帐户:"
                />

            <EditText
                android:id="@+id/et_public_account_two"
                style="@style/authorization_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入对公帐户"
                android:maxLength="30"
                android:inputType="number"
                android:singleLine="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_aa"
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="开户银行："
                />

            <Spinner
                android:id="@+id/sp_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authen_item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/authorization_developer_text"
                android:layout_width="@dimen/bank_verify_width"
                android:layout_height="wrap_content"
                android:text="开户地点："
                />

            <com.ms.ebangw.view.ProvinceAndCityView
                android:id="@+id/pac_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="该银行卡开户名必须与会员真实名称一致，否则会提交失败！"
                android:textColor="@color/auther_red"
                android:textSize="10sp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bk_but"
                android:text="完成"
                android:textColor="#fff"
                android:textSize="15dp"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
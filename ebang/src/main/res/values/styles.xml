<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>-->
        <!--<item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="ratingbar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
        <item name="android:minWidth">120dip</item>
        <item name="android:maxWidth">120dip</item>

    </style>
    <!-- 线的风格 -->
    <style name="aaa_hor">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@drawable/bk_line</item>
    </style>
    <style name="bbb_hor">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/bk_line</item>
    </style>
    <style name="aaa_ver">
        <item name="android:layout_width">1.5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bk_line</item>
    </style>
    <!-- Spinner的风格 -->
    <style name="aaa_spn">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bk_biankuang</item>
    </style>
    <!-- 年月日的Spinner的风格 -->
    <style name="aaa_spn_time">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bk_biankuang</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>

    </style>


    <!--认证页面-->
    <style name="authorization_text">
        <item name="android:layout_width">110dp</item>
        <item name="android:textColor">@color/auth_description</item>
        <item name="android:textSize">@dimen/authen_item_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="authorization_edit">
    <item name="android:textColor">@color/black_overlay</item>
    <item name="android:textSize">15sp</item>
    <!--<item name="android:background">@drawable/border_gray</item>-->
        <item name="android:background">@null</item>
        <item name="android:layout_marginRight">10dp</item>
    <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

        <!--身份证认证页面-->

        <style name="authorization_card">
            <item name="android:textColor">@color/auth_description</item>
            <item name="android:textSize">@dimen/authen_item_text</item>
            <item name="android:background">@null</item>
            <item name="android:paddingTop">15dp</item>
            <item name="android:paddingBottom">15dp</item>

        </style>

        <!--用户银行信息验证 BankVerifyFragment-->


    <style name="service_but">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/servive_but01</item>
        <item name="android:textColor">@drawable/service_text_col</item>
        <item name="android:button">@drawable/empty</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <!-- 工人认证-->

    <style name="work_type_button_select">
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/work_type_selector</item>
        <item name="android:background">@drawable/work_type_selector</item>
        <item name="android:button">@drawable/empty</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>



    </style>

</resources>
